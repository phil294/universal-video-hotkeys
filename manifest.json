{
	"manifest_version": 3,
	"name": "Universal Video Hotkeys",
	"version": "1.0",
	"description": "Universal video navigation shortcuts that work on all websites",
	"browser_specific_settings": {
		"gecko": {
			"id": "universal-video-hotkeys@waritschlager.de"
		}
	},
	"permissions": [
		"activeTab",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Universal Video Hotkeys"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
